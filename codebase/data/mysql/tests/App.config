<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <connectionStrings>
    <clear/>
    <add name="default" 
         connectionString="Server=localhost;Port=3306;Database=${dbname};Uid=${dbuser};Pwd=${dbpasswd};" 
         providerName="MySql.Data.MySqlClient" 
         />
  </connectionStrings>
  <appSettings>
    <add key="dbname" value="some_database" />
    <add key="dbuser" value="${USERNAME}"/><!-- from environment -->
    <add key="dbpasswd" value="kukuruku"/>
  </appSettings>
</configuration>