<?xml version="1.0" encoding="utf-8"?>
<Project>
  <Choose>
    <When Condition="'$(FrameworkShortName)' == 'netstandard2.0'">
      <ItemGroup>
        <PackageReference Include="System.Configuration.ConfigurationManager" Version="4.4.0" />
        <PackageReference Include="Microsoft.Extensions.Configuration.FileExtensions" Version="2.2.*" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="2.2.*" />
      </ItemGroup>
    </When>
    <When Condition="'$(FrameworkShortName)' == 'net461'">
      <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Configuration.FileExtensions" Version="2.2.*" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="2.2.*" />
      </ItemGroup>
    </When>
  </Choose>
</Project>