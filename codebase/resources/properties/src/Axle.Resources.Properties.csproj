<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;netstandard2.0;netstandard1.3;net45;net40;net35</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <ProjectGuid>5D89911E-F70B-4C08-9659-119104318881</ProjectGuid>
    <RootNamespace>$(AssemblyName)</RootNamespace>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DocumentationFile>$(OutputPath)\$(AssemblyName).xml</DocumentationFile>
    <Description>Axle Framework resources library to handle Java properties</Description>
    <PackageTags>Axle.Resources.Properties Kajabity.Tools.Java</PackageTags>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <DefineConstants>$(DefineConstants);DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <DefineConstants>$(DefineConstants);TRACE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Resources\IResource.cs" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <Import Project="../../../Axle.Common.props" />
  <Import Project="../../../Reference.Axle.Core.targets" />
  <Import Project="../../../Reference.Axle.Text.Documents.targets" />
  <Import Project="../../../Reference.Axle.Text.Documents.Properties.targets" />
  <Import Project="../../../Reference.Axle.Resources.targets" />
</Project>